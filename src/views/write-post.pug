extends base

block content 
    form(method="post" enctype="multipart/form-data").post-write-edit
        span.main-logo Post Upload
        div
            input(type="text" placeholder="You can select max 4 images.").filename
            label(for="imageFile").fileSelectBtn
                i.fas.fa-link
            input(type="file" id="imageFile" required multiple name="postImages" accept="image/*").hiddenBtn
        input(type="text" name="title" required placeholder="Title")
        input(type="text" name="content" required placeholder="Content")
        input(type="text" name="hashtags" required placeholder="Hashtags")
        input(type="submit" value="Submit")
block script 
    script(src="../static/js/fileUpload.js") 