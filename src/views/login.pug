extends base

block content
    if errorMessage 
            span #{errorMessage}
    form.login(method="POST")
        input(name="username" placeholder="Username" type="text" required)
        input(name="password" placeholder="Password" type="password" required)
        input(type="submit" value="Submit")
    div.login-github
            a(href="/users/github/start")
                span Continue with Github &rarr;
    div.login-kakao
            a(href="/users/kakao/start")
                span Continue with Kakao &rarr;
    div.login-naver
            a(href="/users/naver/start")
                span Continue with Naver &rarr;
    div
        span Don't have an account? 
        a(href="/join") Make one now &rarr;