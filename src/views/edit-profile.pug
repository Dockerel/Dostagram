extends base

block content 
    form(method="post" enctype="multipart/form-data")
        label(for="imageFile") Click here to select file!
        input(type="file" id="imageFile" name="avatar" accept="image/*")
        input(type="text" name="name" value=user.name required placeholder="Name")
        input(type="text" name="username" value=user.username required placeholder="Username")
        input(type="email" name="email" value=user.email required placeholder="Email")
        input(type="submit" value="Submit")